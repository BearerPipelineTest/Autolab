<% if local_assigns[:student_name] then %>
<div class="ui segment">
  <div class="ui checkbox">
    <input type="checkbox" name="select_all"/>
    <label>
      <p> <%= student_name %> </p>
    </label>
    
  </div>

  <% if local_assigns[:andrew_id] then %>
    <span>
      <label id="andrew_id">
        <i> <%= andrew_id %> </i>
      </label>
    </span>
  <% end %>

  <% if local_assigns[:grace_days] then %>
  <div class="ui circular label"> <%= grace_days %> grace days used</div>
  <% end %>

  <% if local_assigns[:missing_submissions] then %>
  <div class="ui circular label"> <%= missing_submissions %> missing submission</div>
  <% end %>

  <% if local_assigns[:downward_trend] then %>
  <div class="ui circular label">Downward trend</div>
  <% end %>
  <% if local_assigns[:low_scores] then %>
  <div class="ui circular label"> <%= low_scores %> low scores</div>
  <% end %>

  <div class="students-buttons-right"> 
    <% if local_assigns[:archived] then %>
      <div class="left ui icon" data-content="This student also appears in archived">
        <i class="exclamation circle icon"></i>
      </div>
    <% end %>
    <button class="ui submit tiny button"><i class="mail outline icon"></i>CONTACT</button>
    <button class="ui submit tiny button"><i class="check circle icon"></i>RESOLVE</button>
  </div>
</div>
<% end %>
